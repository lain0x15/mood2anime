apiVersion: apps/v1
kind: Deployment
metadata:
  name: mood2anime
  labels:
    app: mood2anime
spec:
  replicas: 1
  selector:
    matchLabels:
      app: mood2anime
  template:
    metadata:
      labels:
        app: mood2anime
    spec:
      volumes:
      - name: git-repo
        emptyDir: {}
      initContainers:
        - name: git-clone
          image: alpine/git
          command:
            - sh
            - -c
            - |
              git clone -b dev https://github.com/lain0x15/mood2anime.git /git-repo
          volumeMounts:
            - name: git-repo
              mountPath: /git-repo
      containers:
      - name: mood2anime
        image: python:3.12-slim
        command: ["/bin/sh", "-c"]
        args: ["pip install -r /usr/src/app/requirements.txt && python3.12 /usr/src/app/manage.py migrate && python3.12 /usr/src/app/manage.py runserver  0.0.0.0:8080"]
        env:
          - name: PYTHONUNBUFFERED
            value: "1"
        volumeMounts:
          - name: git-repo
            mountPath: /usr/src/app
        livenessProbe:
          httpGet:
            path: /
            port: 8080
          failureThreshold: 5
          periodSeconds: 10
        startupProbe:
          httpGet:
            path: /
            port: 8080
          failureThreshold: 30
          periodSeconds: 10